<h1 class="title"><%= @title %></h1>
<%= form_for :sub_category, :url => "/category/add_sub_category" do |f| -%>
    <%= errors_for @sub_category %>
    <table class="blue_tb">
      <tr>
        <th width=100>一级分类</th>
        <td width=230><%= f.select :category_id, @categories, {:include_blank => true} %></td>
        <th width=100>名称</th>
        <td width=230><%= f.text_field :name %></td>
        <td colspan="4"><%= submit_tag "保存", :class => "btn btn-primary" %></td>
      </tr>
    </table>
<% end -%>
